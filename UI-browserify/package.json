{
  "name": "canooradio",
  "description": "canoo radio",
  "author": "CodeCamp",
  "version": "1.0.0",
  "dependencies": {
    "angular": "1.4.7",
    "express": "4.13.3",
    "morgan": "^1.6.1",
    "underscore": "1.8.3"
  },
  "devDependencies": {
    "browserify": "11.2.0",
    "envify": "3.4.0",
    "jest-cli": "0.6.1",
    "uglify-js": "2.5.0",
    "watchify": "3.5.0"
  },
  "scripts": {
    "build-js": "browserify js/app.js -o public/dist/app.js && notify-send \"browserified canoo radio\" \"`date`\"",
    "build-min-js": "browserify js/app.js | uglifyjs -o public/dist/app.min.js  && notify-send \"browserified and uglified canoo radio\" \"`date`\"",
    "watch-js": "nodemon -e js -w js -x 'npm run build-js'",
    "watch-min-js": "nodemon -e js -w js -x 'npm run build-min-js'",
    "build-sass": "node-sass sass/canooradio.scss public/dist/canooradio.css",
    "build-min-sass": "node-sass sass/canooradio.scss | cleancss -o public/dist/canooradio.min.css",
    "watch-sass": "nodemon -e scss -w sass -x 'npm run build-sass'",
    "build": "npm run build-js",
    "watch": "npm run watch-js",
    "watch-min": "npm run watch-min-js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "browserify": {
    "transform": [
      "envify"
    ]
  },
  "jest": {
    "rootDir": "./js"
  }
}
